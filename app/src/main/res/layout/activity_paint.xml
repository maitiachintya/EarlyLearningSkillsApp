<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PaintActivity"
    android:background="#FDD835">

    <SeekBar
        android:id="@+id/thickness"
        android:layout_width="@dimen/_350sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp" />

    <com.example.earlylearningskillsapp.customview.MyView
        android:id="@+id/mycustompaintview"
        android:layout_width="@dimen/_400sdp"
        android:layout_height="@dimen/_230sdp"
        android:background="#ffff"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/thickness"></com.example.earlylearningskillsapp.customview.MyView>

    <RelativeLayout
        android:id="@+id/rl_home"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/thickness"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/homeop"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerInParent="true"
            android:background="@drawable/home" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_delete"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:background="@drawable/custom_btn_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="114dp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/rl_home">

        <ImageView
            android:id="@+id/deleteoption"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/delete" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_erase"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/rl_delete"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/eraseop"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/eraser" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@id/rl_erase"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shareoption1"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/share" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_download"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_500sdp"
        app:layout_constraintTop_toBottomOf="@id/thickness"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/downloading"
            android:layout_width="47dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/downloading" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_draw"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_500sdp"
        app:layout_constraintTop_toBottomOf="@id/rl_download"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/drawoption"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/colordraw" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_galery"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_500sdp"
        app:layout_constraintTop_toBottomOf="@id/rl_draw"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/galeryoption"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/gallery" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_refresh"
        android:layout_width="@dimen/_50ssp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_500sdp"
        app:layout_constraintTop_toBottomOf="@id/rl_galery"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/refreshoption"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/refresh" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_yellowcolor"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintLeft_toRightOf="@id/rl_red"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/mycustompaintview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/yellowcolor"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/yellowcolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_red"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintRight_toLeftOf="@id/thickness"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/mycustompaintview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/redcolor"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/redcolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_blue"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintLeft_toRightOf="@id/rl_yellowcolor"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/mycustompaintview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bluecolor"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/bluecolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_green"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintLeft_toRightOf="@id/rl_blue"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/mycustompaintview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/greencolor"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/greencolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_orange"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintLeft_toRightOf="@id/rl_green"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/mycustompaintview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/orangecolor"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/orangecolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_pink"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintLeft_toRightOf="@id/rl_orange"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/mycustompaintview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/pinkcolor"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/pinkcolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_skyblue"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintLeft_toRightOf="@id/rl_pink"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/mycustompaintview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/skybluecolor"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/skybluecolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_violate"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintLeft_toRightOf="@id/rl_skyblue"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/mycustompaintview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/violatecolor"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/violatecolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_lightgreen"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintLeft_toRightOf="@id/rl_violate"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/mycustompaintview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/lightgreencolor"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/lightgreencolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_browncolor"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintLeft_toRightOf="@id/rl_lightgreen"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/mycustompaintview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/brown"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/browncolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_greyclor"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintLeft_toRightOf="@id/rl_browncolor"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/mycustompaintview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/grey"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/greycolor" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_blackcolor"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintLeft_toRightOf="@id/rl_greyclor"
        tools:layout_editor_absoluteY="114dp"
        android:background="@drawable/custom_btn_bg"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/mycustompaintview"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/blackcolor"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/blackcolor" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>